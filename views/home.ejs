<div class="author">
    <h1 class="author__heading">Hi, I am Ajit.</h1>
    <p class="author__body">web developer and analyst</p>
</div>

<img src="/images/grievance-cell.jpg" class="hero-image" height="528" width="981">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="atricle-ul">
       <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    <% if(nextPage!==null) { %>
        <a href="/?page=<%= nextPage   %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>